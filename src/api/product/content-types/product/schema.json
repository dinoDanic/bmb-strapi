{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Proizvod",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "image": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "kategorija": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    },
    "sifra": {
      "type": "string",
      "required": false,
      "unique": true
    },
    "vpc": {
      "type": "decimal",
      "required": true,
      "default": 0
    },
    "valuta": {
      "type": "enumeration",
      "enum": [
        "EUR"
      ],
      "default": "EUR",
      "required": true
    },
    "meta_title": {
      "type": "string"
    },
    "meta_description": {
      "type": "string"
    },
    "meta_keywords": {
      "type": "string"
    },
    "opis": {
      "type": "richtext"
    },
    "EAN": {
      "type": "string"
    },
    "tezina": {
      "type": "integer"
    },
    "dimenzija_lozista": {
      "type": "string"
    },
    "radna_ploca": {
      "type": "string"
    },
    "promjer_stola": {
      "type": "integer"
    },
    "visina": {
      "type": "string"
    }
  }
}
